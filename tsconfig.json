{
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Emit
    "noEmit": true,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Language and Environment
    "lib": ["ES2022"],
    "target": "ES2022",

    // Completeness
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist"]
}
